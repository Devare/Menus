<resources>

    <!-- Tema de la aplicación base. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Personaliza tu tema aquí. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/colorBlanco</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="actionMenuTextColor">@color/colorBlanco</item>
        <item name="android:windowNoTitle">true</item>

        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>

        <!--  Para el modo de acción personalizada  Color/Drawable -->
        <item name="actionModeBackground">@color/colorPrimaryDark</item>

        <!--  Para el Menu de opciones -->
        <item name="android:itemTextAppearance">@style/itemTextStyle</item>
        <item name="dropDownListViewStyle">@style/dropDownListView</item>
    </style>

    <!-- selector for pressed/focused states -->
    <style name="dropDownListView" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/menu_selector</item>
    </style>

    <!-- font color -->
    <style name="itemTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@drawable/menu_item_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ViewsTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ViewsTheme.ThemeButton">
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/bk_boton_selector</item>
    </style>

</resources>
